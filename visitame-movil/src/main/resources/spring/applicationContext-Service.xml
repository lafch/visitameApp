<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:task="http://www.springframework.org/schema/task"
	xmlns:p="http://www.springframework.org/schema/p" 
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
						http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
						http://www.springframework.org/schema/context 
						http://www.springframework.org/schema/context/spring-context-4.0.xsd
						http://www.springframework.org/schema/task
    					http://www.springframework.org/schema/task/spring-task-3.0.xsd">
	<task:annotation-driven executor="executor" />
	<task:executor id="executor" pool-size="100"/>
	<context:component-scan base-package="pe.com.bbva.visitame.service.impl" />
	<context:component-scan base-package="pe.com.bbva.visitame.helper" />
	<context:component-scan base-package="pe.com.bbva.visitame.exception" />
	<bean id="messageSource" class="org.springframework.context.support.ReloadableResourceBundleMessageSource">
		<property name="basename" value="classpath:mensajes" />
		<property name="fallbackToSystemLocale" value="false" />
	</bean>
	<bean id="restTemplate" class="org.springframework.web.client.RestTemplate">
		<property name="messageConverters">
			<list>
				<bean class="org.springframework.http.converter.json.MappingJackson2HttpMessageConverter" />
			</list>
		</property>
	</bean>
	
</beans>